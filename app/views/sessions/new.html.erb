<div class="row">
	<div class="container-fluid center">
		<div class="col-md-4 col-md-offset-4">
			<div class="jumbotronTransp">
				<div class="text-center">
					<a class="signup_logo" href="#">shotn</a>
					<h3>Login</h3>
				</div>
				<div class="form-container">
					<%= form_tag method: :post do %>
					<div class="form-group">
						<%= label_tag :email %>
						<%= email_field_tag :email, nil, class: 'form-control', required: true %>
					</div>

					<div class="form-group">
						<%= label_tag :password %>
						<%= password_field_tag :password, nil, class: 'form-control', required: true %>
					</div>

					<%= button_tag 'Log In', class: 'btn btn-signup btn-lg' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
